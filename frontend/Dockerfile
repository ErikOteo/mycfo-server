# Etapa de construcci贸n
FROM node:20-alpine AS build
WORKDIR /app

# Copiar solo package.json y package-lock.json para aprovechar cache de npm install
COPY package*.json ./
RUN npm install

# Copiar el resto del c贸digo fuente
COPY . .
# --- INICIO BLOQUE DE ARGUMENTOS ---
ARG REACT_APP_BASE_URL
ARG REACT_APP_URL_ADMINISTRACION
ARG REACT_APP_URL_IA
ARG REACT_APP_URL_NOTIFICACION
ARG REACT_APP_URL_PRONOSTICO
ARG REACT_APP_URL_REGISTRO
ARG REACT_APP_URL_REPORTE
ARG REACT_APP_WEBSOCKET_URL
ARG REACT_APP_COGNITO_USER_POOL_ID
ARG REACT_APP_COGNITO_CLIENT_ID
ARG REACT_APP_AWS_REGION

ENV REACT_APP_BASE_URL=$REACT_APP_BASE_URL
ENV REACT_APP_URL_ADMINISTRACION=$REACT_APP_URL_ADMINISTRACION
ENV REACT_APP_URL_IA=$REACT_APP_URL_IA
ENV REACT_APP_URL_NOTIFICACION=$REACT_APP_URL_NOTIFICACION
ENV REACT_APP_URL_PRONOSTICO=$REACT_APP_URL_PRONOSTICO
ENV REACT_APP_URL_REGISTRO=$REACT_APP_URL_REGISTRO
ENV REACT_APP_URL_REPORTE=$REACT_APP_URL_REPORTE
ENV REACT_APP_WEBSOCKET_URL=$REACT_APP_WEBSOCKET_URL
ENV REACT_APP_COGNITO_USER_POOL_ID=$REACT_APP_COGNITO_USER_POOL_ID
ENV REACT_APP_COGNITO_CLIENT_ID=$REACT_APP_COGNITO_CLIENT_ID
ENV REACT_APP_AWS_REGION=$REACT_APP_AWS_REGION
# --- FIN BLOQUE DE ARGUMENTOS ---
# Construir la app React (generar carpeta build)
RUN npm run build

# Etapa de producci贸n: servidor Nginx
FROM nginx:stable-alpine

# Copiar build generado
COPY --from=build /app/build /usr/share/nginx/html

# Copiar configuraci贸n personalizada de Nginx para proxy reverso
COPY src/config/nginx.conf /etc/nginx/nginx.conf

# Exponer puerto 80 para servir contenido
EXPOSE 80

# Comando para ejecutar Nginx en primer plano
CMD ["nginx", "-g", "daemon off;"]


